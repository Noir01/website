---
import LandingLayout from '../layouts/LandingLayout.astro';
import Socials from '../components/Socials.astro';
---

<LandingLayout>
	<main class="landing">
		<div class="content">
			<div class="name-block">
				<h1 class="first-name">Aniruddh</h1>
				<h1 class="last-name">Srivastava</h1>
			</div>

			<div class="info">
				<p class="role">Software Engineer</p>
				<!-- <p class="location">Portland, Oregon</p> -->
			</div>

			<p class="tagline">
				Learning something new every day and building useful things along the way.
			</p>

			<Socials />
		</div>
	</main>
</LandingLayout>

<style>
	.landing {
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 2rem;
	}

	.content {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
		text-align: center;
		max-width: 700px;
	}

	.name-block {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.25rem;
	}

	.first-name,
	.last-name {
		font-family: var(--font-brand);
		font-weight: 700;
		margin: 0;
		color: var(--gray-0);
		line-height: 1.1;
	}

	.first-name {
		font-size: var(--text-4xl);
	}

	.last-name {
		font-size: var(--text-3xl);
		color: var(--gray-300);
	}

	.info {
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
	}

	.role {
		font-size: var(--text-xl);
		color: var(--accent-regular);
		font-weight: 600;
		margin: 0;
	}

	.location {
		font-size: var(--text-md);
		color: var(--gray-400);
		margin: 0;
	}

	.tagline {
		font-size: var(--text-lg);
		color: var(--gray-300);
		line-height: 1.6;
		margin: 0;
		max-width: 50ch;
	}

	@media (max-width: 50em) {
		.first-name {
			font-size: var(--text-3xl);
		}

		.last-name {
			font-size: var(--text-2xl);
		}
		.landing {
			padding: 1.5rem;
		}

		.content {
			gap: 1.5rem;
		}

		.role {
			font-size: var(--text-lg);
		}

		.tagline {
			font-size: var(--text-base);
		}
	}
</style>
