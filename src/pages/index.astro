---  
import Layout from '../layouts/Layout.astro';  

import Card from '../components/Card.astro';
---  

<Layout>
  <Card>
    <div class="profile">
      <div class="left">
        <img class="avatar" src="/android-chrome-192x192.png" alt="Aniruddh" />
        <div class="widget" />
        <div class="widget" />
      </div>
      <div class="info">
        <h3 class="name-heading">
          <div class="letter">A</div>
          <div class="letter">N</div>
          <div class="letter">I</div>
          <div class="letter">R</div>
          <div class="letter">U</div>
          <div class="letter">D</div>
          <div class="letter">D</div>
          <div class="letter">H</div>
        </h3>
        <p>I'm Aniruddh Srivastava, an Indian international student studying Computer Science and Computer Engineering at Purdue.</p>
      </div>
    </div>

    <style>
      .profile {
        display: flex;
        align-items: flex-start;
        text-align: left;
      }

      .left {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-right: 1rem;
      }

      .avatar {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
        margin-bottom: 0.5rem;
      }

      .widget {
        width: 150px;
        height: 24px;
        margin-top: 0.4rem;
        border: 1px dashed #888;
        border-radius: 4px;
      }

      .name-heading {
        display: flex;
        gap: 0.1rem;
        font-size: 1.5rem;
      }

      .letter {
        display: inline-block;
        cursor: pointer;
        user-select: none;
      }

      .letter.jump {
        animation: jump 0.3s ease;
      }

      @keyframes jump {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
      }
    </style>

    <script client:load>
      const letters = document.querySelectorAll('.name-heading .letter');
      letters.forEach((letter) => {
        letter.addEventListener('pointerdown', () => {
          const el = letter as HTMLElement;
          el.classList.remove('jump');
          void el.offsetWidth;
          el.classList.add('jump');
        });
      });
    </script>
  </Card>
</Layout>
