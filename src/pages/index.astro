---
import LandingLayout from '../layouts/LandingLayout.astro';
import Socials from '../components/Socials.astro';
---

<LandingLayout>
	<main class="landing">
		<div class="content">
			<div class="name-block">
				<h1 class="first-name">ANIRUDDH</h1>
				<h1 class="last-name">SRIVASTAVA</h1>
			</div>

			<div class="info">
				<p class="role">Software Engineer</p>
				<!-- <p class="location">Portland, Oregon</p> -->
			</div>

			<p class="tagline">
				Learning something new every day and building useful things along the way.
			</p>

			<nav class="page-links">
				<a href="/blog/" class="page-link">Blog</a>
				<a href="/projects/" class="page-link">Projects</a>
				<a href="/gallery/" class="page-link">Gallery</a>
			</nav>

			<Socials />
		</div>
	</main>
</LandingLayout>

<style>
	.landing {
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 2rem;
	}

	.content {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
		text-align: center;
		max-width: 700px;
	}

	.name-block {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.25rem;
	}

	.first-name,
	.last-name {
		font-family: var(--font-brand);
		font-weight: 700;
		margin: 0;
		color: var(--gray-0);
		line-height: 1.1;
	}

	.first-name {
		font-size: var(--text-4xl);
	}

	.last-name {
		font-size: var(--text-3xl);
		color: var(--gray-300);
	}

	.info {
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
	}

	.role {
		font-size: var(--text-xl);
		color: var(--accent-regular);
		font-weight: 600;
		margin: 0;
	}

	.location {
		font-size: var(--text-md);
		color: var(--gray-400);
		margin: 0;
	}

	.tagline {
		font-size: var(--text-lg);
		color: var(--gray-300);
		line-height: 1.6;
		margin: 0;
		max-width: 50ch;
	}

	.page-links {
		display: flex;
		gap: 2rem;
		flex-wrap: wrap;
		justify-content: center;
	}

	.page-link {
		color: var(--gray-300);
		text-decoration: none;
		font-size: var(--text-md);
		font-weight: 500;
		padding: 0.5rem 1rem;
		border-radius: 999rem;
		transition:
			color 0.2s ease,
			background-color 0.2s ease;
	}

	.page-link:hover,
	.page-link:focus {
		color: var(--gray-0);
		background-color: var(--gray-800);
	}

	@media (max-width: 50em) {
		.first-name {
			font-size: var(--text-3xl);
		}

		.last-name {
			font-size: var(--text-2xl);
		}
		.landing {
			padding: 1.5rem;
		}

		.content {
			gap: 1.5rem;
		}

		.role {
			font-size: var(--text-lg);
		}

		.tagline {
			font-size: var(--text-base);
		}

		.page-links {
			gap: 1rem;
		}
	}
</style>
