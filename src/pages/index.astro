---  
import Layout from '../layouts/Layout.astro';  

import Card from '../components/Card.astro';
---  

<Layout>
  <Card>
    <div class="profile">
      <div class="left">
        <img class="avatar" src="/android-chrome-192x192.png" alt="Aniruddh" />
        <div id="spotify-widget" class="widget spotify-widget" />
        <div class="widget" />
      </div>
      <div class="info">
        <h3 class="name-heading">
          <div class="letter">A</div>
          <div class="letter">N</div>
          <div class="letter">I</div>
          <div class="letter">R</div>
          <div class="letter">U</div>
          <div class="letter">D</div>
          <div class="letter">D</div>
          <div class="letter">H</div>
        </h3>
        <p>I'm Aniruddh Srivastava, an Indian international student studying Computer Science and Computer Engineering at Purdue.</p>
      </div>
    </div>

    <style>
      .profile {
        display: flex;
        align-items: flex-start;
        text-align: left;
      }

      .left {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-right: 1rem;
      }

      .avatar {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
        margin-bottom: 0.5rem;
      }

      .widget {
        width: 150px;
        height: 24px;
        margin-top: 0.4rem;
        border: 1px dashed #888;
        border-radius: 4px;
      }

      .spotify-widget {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0.25rem;
        height: auto;
      }

      .spotify-widget .info {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        margin-right: 0.25rem;
        font-size: 0.7rem;
      }

      .spotify-widget .info a {
        color: #e0e0e0;
        text-decoration: none;
        font-weight: bold;
        font-size: 0.8rem;
      }

      .spotify-widget .info a:hover {
        text-decoration: underline;
      }

      .spotify-widget hr {
        width: 100%;
        border: none;
        border-top: 1px solid #888;
        margin: 0.1rem 0;
      }

      .spotify-widget .meta {
        color: #ccc;
      }

      .spotify-widget .album-art {
        width: 48px;
        height: 48px;
        object-fit: cover;
        border-radius: 2px;
      }

      .spotify-widget.text-only {
        justify-content: center;
        font-size: 0.8rem;
      }

      .name-heading {
        display: flex;
        gap: 0.1rem;
        font-size: 1.5rem;
      }

      .letter {
        display: inline-block;
        cursor: pointer;
        user-select: none;
      }

      .letter.jump {
        animation: jump 0.3s ease;
      }

      @keyframes jump {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
      }
    </style>

    <script>
      const letters = document.querySelectorAll('.name-heading .letter');
      letters.forEach((letter) => {
        const el = letter as HTMLElement;
        const jump = () => {
          el.classList.remove('jump');
          void el.offsetWidth;
          el.classList.add('jump');
        };
        letter.addEventListener('pointerdown', jump);
        letter.addEventListener('pointerenter', jump);
      });
    </script>
    <script type="module" src="../scripts/spotify-widget.js"></script>
  </Card>
</Layout>
