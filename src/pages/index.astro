---  
import Layout from '../layouts/Layout.astro';  

import Card from '../components/Card.astro';
---  

<Layout>
  <Card>
    <div class="profile">
      <div class="left">
        <img class="avatar" src="/android-chrome-192x192.png" alt="Aniruddh" />
        <div class="widget spotify-widget" />
        <div class="widget" />
      </div>
      <div class="info">
        <h3 class="name-heading">
          <div class="letter">A</div>
          <div class="letter">N</div>
          <div class="letter">I</div>
          <div class="letter">R</div>
          <div class="letter">U</div>
          <div class="letter">D</div>
          <div class="letter">D</div>
          <div class="letter">H</div>
        </h3>
        <p>I'm Aniruddh Srivastava, an Indian international student studying Computer Science and Computer Engineering at Purdue.</p>
      </div>
    </div>

    <style>
      .profile {
        display: flex;
        align-items: flex-start;
        text-align: left;
      }

      .left {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-right: 1rem;
      }

      .avatar {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
        margin-bottom: 0.5rem;
      }

      .widget {
        width: 150px;
        height: 24px;
        margin-top: 0.4rem;
        border: 1px dashed #888;
        border-radius: 4px;
      }

      .spotify-widget {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0.2rem;
        min-height: 24px;
        height: auto;
      }

      .spotify-widget .info {
        flex: 1;
        margin-right: 0.25rem;
        overflow: hidden;
      }

      .spotify-widget .song {
        font-size: 0.65rem;
        color: inherit;
        text-decoration: none;
        display: block;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      .spotify-widget hr {
        border: none;
        border-top: 1px solid #555;
        margin: 2px 0;
      }

      .spotify-widget .meta {
        font-size: 0.55rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      .spotify-widget .art {
        width: 20px;
        height: 20px;
        object-fit: cover;
        border-radius: 2px;
        flex-shrink: 0;
      }

      .name-heading {
        display: flex;
        gap: 0.1rem;
        font-size: 1.5rem;
      }

      .letter {
        display: inline-block;
        cursor: pointer;
        user-select: none;
      }

      .letter.jump {
        animation: jump 0.3s ease;
      }

      @keyframes jump {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
      }
    </style>

    <script>
      const letters = document.querySelectorAll('.name-heading .letter');
      letters.forEach((letter) => {
        const el = letter as HTMLElement;
        const jump = () => {
          el.classList.remove('jump');
          void el.offsetWidth;
          el.classList.add('jump');
        };
        letter.addEventListener('pointerdown', jump);
        letter.addEventListener('pointerenter', jump);
      });
    </script>

    <script type="module">
      const widget = document.querySelector('.spotify-widget');
      if (widget) {
        fetch('https://spotify.noir.ac/')
          .then(r => r.json())
          .then(data => {
            if (!data.playing) {
              widget.textContent = 'Not Listening to anything';
              return;
            }
            const info = document.createElement('div');
            info.className = 'info';
            const songLink = document.createElement('a');
            songLink.className = 'song';
            songLink.href = data.url;
            songLink.target = '_blank';
            songLink.rel = 'noopener noreferrer';
            songLink.textContent = data.song;
            const hr = document.createElement('hr');
            const meta = document.createElement('div');
            meta.className = 'meta';
            meta.textContent = `${data.artist} | ${data.album}`;
            info.append(songLink, hr, meta);
            const art = document.createElement('img');
            art.className = 'art';
            art.src = data.album_art;
            art.alt = 'Album Art';
            widget.replaceChildren(info, art);
          })
          .catch(() => {
            widget.textContent = 'Not Listening to anything';
          });
      }
    </script>
  </Card>
</Layout>
