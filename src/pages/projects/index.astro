---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Projects" description="A collection of my projects">
	<main class="wrapper stack gap-8">
		<header class="hero">
			<h1>Projects</h1>
			<p>Coming soon.</p>
		</header>
	</main>
</BaseLayout>

<style>
	.hero {
		padding: 4rem 0;
		text-align: center;
	}

	h1 {
		font-size: var(--text-4xl);
		color: var(--gray-0);
		margin-bottom: 1rem;
	}

	p {
		font-size: var(--text-lg);
		color: var(--gray-400);
	}
</style>
